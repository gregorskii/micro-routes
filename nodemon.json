{
  "restartable": "rs",
  "verbose": false,
  "ignore": [
    ".git",
    "node_modules/**"
  ],
  "execMap": {
    "js": "node ./{{filename}}"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "*.js",
    ".env",
    "package.json"
  ],
  "ext": "js json"
}
